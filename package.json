{
  "name": "template-api",
  "version": "1.0.0",
  "description": "description",
  "author": "Brian Schardt",
  "license": "MIT",
  "engines": {
    "node": "~10"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "docker:start:dev": "docker-compose up",
    "start:debug": "nodemon --config nodemon-debug.json",
    "build": "rm -rf dist && tsc",
    "start:prod": "node dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm --config ./ormconfig.ts",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.5",
    "@nestjs/core": "^6.0.5",
    "@nestjs/graphql": "^6.0.5",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/typeorm": "^6.0.0",
    "apollo-server-express": "^2.8.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "dotenv": "^6.1.0",
    "express-rate-limit": "^5.0.0",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.1",
    "jsonwebtoken": "^8.3.0",
    "pg": "^7.5.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^24.0.17",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
